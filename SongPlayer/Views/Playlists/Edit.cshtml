@model SongPlayer.Models.PlaylistViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Playlist</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PlaylistId)

        <div class="form-group">
            @Html.LabelFor(model => model.PlaylistName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PlaylistName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PlaylistName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Songs, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @for (int i = 0; i < Model.Songs.Count(); i++)
                {
                    <div>
                        @Html.EditorFor(m => Model.Songs[i].Checked)
                        @Html.DisplayFor(m => Model.Songs[i].Name) - Album:  @Html.DisplayFor(m => Model.Songs[i].Album) - Autor:  @Html.DisplayFor(m => Model.Songs[i].Autor)
                     

                     
                        @Html.HiddenFor(m => Model.Songs[i].Name)
                        @Html.HiddenFor(m => Model.Songs[i].Id)
                    </div>
                }
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
