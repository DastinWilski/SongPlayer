@model SongPlayer.Models.PlaylistViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Playlist</h4>
    <hr />
    <dl class="dl-horizontal">
       

        <dt>
            @Html.DisplayNameFor(model => model.PlaylistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlaylistName)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Songs)
        </dt>

        <dd>
            @foreach (var item in Model.Songs)
            {
                if (item.Checked)
                {
                    <div>@item.Name - Album: @item.Album - Autor: @item.Autor</div>
                   

                }
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.PlaylistId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
