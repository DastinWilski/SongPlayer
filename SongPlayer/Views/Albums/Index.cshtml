@model IEnumerable<SongPlayer.Models.Album>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Albums</h2>

<p>
    <button type="button" id="btnCreate" class="btn btn-primary" data-toggle="modal" data-target="#productModal">
        Create New
    </button>
</p>

<table id="listProducts" class="table">
    <thead>
        <tr>
           
            <th>AlbumName</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!--Insert/Update Model-->
<div id="productModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="hidden" class="form-control" id="AlbumId" />
                            <label>AlbumName</label>
                            <input type="text" id="AlbumName" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Author</label>
                            <input type="text" id="Author" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<div id="productModal2" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><label id="title2"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>AlbumID</label>
                            <output type="text" class="form-control" id="AlbumId2" />
                           
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>AlbumName</label>
                            <output type="text" id="AlbumName2" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>Author</label>
                            <output type="text" id="Author2" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
               
                <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Exit</button>
            </div>

        </div>
    </div>
</div>


<!--Confirmation modal-->
<div id="confirmModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><label id="title"></label></h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    Do you want to delete this record ?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnOk" class="btn btn-primary">Ok</button>
                <button type="button" id="btnCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/Scripts/Album.js"></script>
}